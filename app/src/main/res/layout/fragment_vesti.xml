<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vestfragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.CRUD.CRUDVestiFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <EditText
            android:id="@+id/autor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Autor"
            android:textSize="18dp"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textColor="#000"/>

        <EditText
            android:id="@+id/naslov"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Naslov"
            android:textSize="18dp"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textColor="#000"/>

        <EditText
            android:id="@+id/sadrzaj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Sadrzaj"
            android:textSize="18dp"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textColor="#000"/>

        <EditText
            android:id="@+id/url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Url"
            android:textSize="18dp"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textColor="#000"/>

        <EditText
            android:id="@+id/datum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Datum"
            android:textSize="18dp"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textColor="#000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >
            <Button
                android:id="@+id/btnDodajVest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dodaj Vest"
                android:background="#2196F3"
                android:layout_margin="5dp"
                android:padding="20dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                />

            <Button
                android:id="@+id/btnPregledVesti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pregled Vesti"
                android:background="#BDBDBD"
                android:layout_margin="5dp"
                android:padding="20dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>